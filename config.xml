<?xml version='1.0' encoding='utf-8'?>
<widget id="com.seunome.meuapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Meu App</name>
    <description>Descrição do meu aplicativo</description>
    <author email="seu@email.com" href="http://seusite.com">Seu Nome</author>
    
    <content src="index.html" />
    
    <!-- Permitir acesso à internet -->
    <access origin="*" />
    <allow-navigation href="*" />
    
    <!-- Preferências -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="Orientation" value="portrait" />
</widget>
